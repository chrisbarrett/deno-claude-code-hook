{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "name": "@chrisbarrett/claude-code-hook",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./testing": "./testing.ts"
  },
  "imports": {
    "@david/dax": "jsr:@david/dax@^0.43.2",
    "@logtape/file": "jsr:@logtape/file@^1.2.0",
    "@logtape/logtape": "jsr:@logtape/logtape@^1.2.0",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/bytes": "jsr:@std/bytes@^1.0.6",
    "@std/cache": "jsr:@std/cache@^0.2.0",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/testing": "jsr:@std/testing@^1.0.11",
    "zod": "jsr:@zod/zod@^4.1.12/v4"
  },
  "tasks": {
    "gen": "./scripts/gen-hook-inputs.sh"
  },
  "fmt": {
    "exclude": [".beads/**"]
  },
  "exclude": [".*"],
  "lint": {
    "rules": {
      "exclude": ["no-slow-types"]
    }
  },
  "publish": {
    "exclude": [".*", "flake.*", "**/*.test.ts", "scripts/**", "tests"]
  },
  "test": {
    "include": ["**/*.test.ts"],
    "permissions": {
      "run": true,
      "read": true,
      "env": true,
      "write": true
    }
  }
}
